<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="homework.softdev.sirawich.calculator.Calculator">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:background="#fff"
        android:id="@+id/screen"
        android:hint="Number Here"
        android:textSize="30sp"
        android:gravity="bottom"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toTopOf="@+id/ac"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/screen">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/round"
        android:text="AC"
       android:gravity="center"
        android:id="@+id/ac"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/screen" />

    <Button
        android:id="@+id/neg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:background="@drawable/round"
        android:gravity="center"
        android:padding="20dp"
        android:text="+/-"
        app:layout_constraintLeft_toRightOf="@+id/ac"
        app:layout_constraintTop_toBottomOf="@+id/screen"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:text="%"
        android:padding="20dp"
        android:gravity="center"
        android:id="@+id/mod"
        android:layout_marginLeft="7dp"
        app:layout_constraintTop_toBottomOf="@+id/screen"
        app:layout_constraintLeft_toRightOf="@+id/neg"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_horizental"
        android:text="%"
        android:padding="20dp"
        android:gravity="center"
        android:id="@+id/divide"
        android:layout_marginLeft="7dp"
        app:layout_constraintTop_toBottomOf="@+id/screen"
        app:layout_constraintLeft_toRightOf="@+id/mod"
        />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
