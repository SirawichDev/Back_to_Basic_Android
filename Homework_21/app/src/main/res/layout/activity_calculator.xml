<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="homework.softdev.sirawich.calculator.Calculator">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:background="#B2EBF2"
        android:id="@+id/screen"
        android:hint="Number Here"
        android:textSize="30sp"
        android:gravity="bottom"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toTopOf="@+id/ac"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:id="@+id/row1"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/screen">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/round"
        android:text="AC"
       android:gravity="center"
        android:id="@+id/ac"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/sev"
        app:layout_constraintTop_toBottomOf="@+id/screen" />

    <Button
        android:id="@+id/neg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"

        android:background="@drawable/round"
        android:gravity="center"
        android:padding="20dp"
        android:text="+/-"
        app:layout_constraintLeft_toRightOf="@+id/ac"
        app:layout_constraintTop_toBottomOf="@+id/screen"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:text="%"
        android:padding="20dp"
        android:gravity="center"
        android:id="@+id/mod"
        android:layout_marginLeft="7dp"
        app:layout_constraintTop_toBottomOf="@+id/screen"
        app:layout_constraintLeft_toRightOf="@+id/neg"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_horizental"
        android:text="%"
        android:padding="20dp"
        android:gravity="center"
        android:id="@+id/divide"
        android:layout_marginLeft="7dp"
        app:layout_constraintTop_toBottomOf="@+id/screen"
        app:layout_constraintLeft_toRightOf="@+id/mod"
        />

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:id="@+id/row2"
        android:layout_marginTop="7dp"


        app:layout_constraintTop_toBottomOf="@+id/row1">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:text="7"
        android:padding="20dp"
        android:gravity="center"
        android:id="@+id/sev"

        android:layout_marginTop="7dp"
         />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:text="8"
            android:padding="20dp"
            android:gravity="center"
            android:id="@+id/eight"
            android:layout_marginLeft="7dp"

            app:layout_constraintLeft_toRightOf="@+id/sev"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:text="9"
            android:padding="20dp"
            android:gravity="center"
            android:id="@+id/nine"
            android:layout_marginLeft="7dp"

            app:layout_constraintLeft_toRightOf="@+id/eight"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_horizental"
            android:text="x"
            android:padding="20dp"
            android:gravity="center"
            android:id="@+id/cross"
            android:layout_marginLeft="7dp"
            app:layout_constraintLeft_toRightOf="@+id/nine"
            />

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:id="@+id/row3"
        android:layout_marginTop="7dp"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row2">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:text="4"
            android:padding="20dp"
            android:gravity="center"
            android:id="@+id/four"
            android:layout_marginLeft="7dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:text="5"
            android:padding="20dp"
            android:gravity="center"
            android:id="@+id/five"
            app:layout_constraintLeft_toRightOf="@+id/four"
            android:layout_marginLeft="7dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:text="6"
            android:padding="20dp"
            android:gravity="center"
            android:id="@+id/six"
            app:layout_constraintLeft_toRightOf="@+id/five"
            android:layout_marginLeft="7dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_horizental"
            android:text="-"
            android:padding="20dp"
            android:gravity="center"
            android:id="@+id/minus"
            app:layout_constraintLeft_toRightOf="@+id/six"
            android:layout_marginLeft="7dp"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row4"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        app:layout_constraintLeft_toRightof="parent"
        app:layout_constraintRight_toLeftof="parent"
        app:layout_constraintTop_toBottomOf="@+id/row3">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:text="1"
            android:id="@+id/one"
            app:layout_constraintRight_toLeftof="@+id/two"
            android:gravity="center" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:text="2"
            android:id="@+id/two"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@+id/one"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:text="3"
            android:id="@+id/three"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@+id/two"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_horizental"
            android:text="+"
            android:gravity="center"
            android:layout_marginLeft="7dp"
            app:layout_constraintLeft_toRightOf="@+id/three"
            />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
